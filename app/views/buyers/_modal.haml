=form_for @buyer, html: {id: 'modal-form'} do |f|
  #create-buyer-modal.modal.fade{"aria-hidden" => "true", role: "dialog", tabindex: "-1"}
    .modal-dialog.modal-lg{role: "document"}
      .modal-content
        .modal-header
          %h4.modal-title Create buyer
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .form-group.text-center
            %label{for: "buyer-name"} Name
            = f.text_field :name, {id: 'buyer-name', class: 'form-control'}
            -#%input#buyer-name.form-control{name: "name", type: "text"}/
          .form-group.text-center
            %label{for: "buyer-description"} Description
            = f.text_area :description, {id: 'buyer-description', rows: '8',class: 'form-control'}
            -#%textarea#buyer-description.form-control{name: "description", rows: "8"}
          .form-group.text-center
            %label{for: "buyer-age"} Age
            = f.text_field :age, {id: 'buyer-age', class: 'form-control w-25 ml-auto mr-auto',max: "60", min: "18", name: "age", step: "1", type: "number"}
            -#%input#buyer-age.form-control.w-25.ml-auto.mr-auto{max: "60", min: "18", name: "age", step: "1", type: "number"}/
        .modal-footer
          = f.submit "Close", {class: 'btn btn-light',"data-dismiss" => "modal"}
          = f.submit "Create", {class: 'btn btn-primary'}
          -#%button.btn.btn-light{"data-dismiss" => "modal", type: "button"} Close
          -#%button.btn.btn-primary{type: "button"} create
